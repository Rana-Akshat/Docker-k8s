pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/Rana-Akshat/Docker-k8s.git/']]])
            }
        }
        stage('Docker compose build') {
            steps {
                sh 'docker compose up'
            }
        }
        stage('Integrate Jenkins with EKS Cluster and Deploy App') {
            steps {
                  script {
                    sh ('aws eks update-kubeconfig --name demo-cluster --region ap-south-1')
                    sh 'kubectl apply -f frontend-deployment.yaml'
                    sh 'kubectl apply -f frontend-service.yaml'
                    sh 'kubectl app;y -f backend-deployment.yaml'
                    sh 'kubectl apply -f backend-service.yaml'
                }
        }
    }
    }
}
